<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#262626"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageButton
            android:id="@+id/imgBtn_music_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/music_close"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_music_title"
                android:layout_toRightOf="@+id/imgBtn_music_close"
                android:layout_marginLeft="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:text="音乐"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/tv_music_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="22sp"
                android:textColor="#ffffff"/>
            <ImageButton
                android:id="@+id/imgBtn_music_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/music_scan"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_alignBottom="@+id/imgBtn_music_close" />
        </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#717171"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#343434"
        android:layout_weight="9">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15">
            <com.musicplayer.view.RoundImageView
                android:id="@+id/rdiv_song_cover"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/music_cover_default"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toRightOf="@+id/rdiv_song_cover"
                android:id="@+id/tv_song_title"
                android:layout_marginLeft="100dp"
                android:textSize="22sp"
                android:textColor="#f34949"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_song_title"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:textColor="#f34949"
                android:layout_below="@+id/tv_song_title"/>
            <TextView
                android:id="@+id/tv_song_time"
                android:layout_below="@+id/tv_song_artist"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/music_bg"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:weightSum="1">
            <ImageButton
                android:id="@+id/imgBtn_control_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/imgBtn_control_play"
                android:layout_marginRight="60dp"
                android:background="@drawable/music_control_last" />
            <ImageButton
                android:id="@+id/imgBtn_control_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/music_control_play"
                android:layout_centerHorizontal="true" />
            <ImageButton
                android:id="@+id/imgBtn_control_next"
                android:layout_toRightOf="@+id/imgBtn_control_play"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/music_control_next"/>
            <ImageButton
                android:id="@+id/imgBtn_music_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgBtn_control_next"
                android:layout_marginLeft="50dp"
                android:background="@drawable/music_model_normal"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>
</LinearLayout>